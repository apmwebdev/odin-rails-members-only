<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>

    <% if user_signed_in? %>
      <p>
        <strong>User:</strong>
        <%= User.find(post.user_id).username %>
      </p>
    <% end %>

<% end %>
</div>
